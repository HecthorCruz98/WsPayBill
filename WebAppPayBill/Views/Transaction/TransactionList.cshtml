@model List<TransactionModel>
@{
    ViewData["Title"] = " Transacciones";
}
<div class="card">
    <div class="card-header">
        Estados
    </div>
    <div class="card-body">

        <a asp-action="TransactionAdd" asp-controller="Transaction" class="btn btn-success btn-sm"></a>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Usuario</th>
                    <th>Numero Factura</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.trnId</td>
                        <td>@item.usrId</td>
                        <td>@item.bilId</td>
                        <td>
                            <a asp-action="TransactionUp" asp-controller="Transaction" class="btn btn-primary btn-sm" asp-route-Id="@item.trnId">Editar</a>
                        </td>
                        <td>
                        </td>
                    </tr>
                }
                <a asp-action="TransactionList" asp-controller="Transaction" class="btn btn-warning btn-sm">Actualizar</a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="EditorialList" asp-controller="Home" class="btn btn-warning btn-sm">Pagos</a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <a asp-action="LibroList" asp-controller="Home" class="btn btn-warning btn-sm">Usuarios</a>


            </tbody>
        </table>
    </div>

</div>