
@{
    ViewData["Title"] = "Home Page";
}

<link rel="canonical" href="https://getbootstrap.com/docs/5.3/examples/sign-in/">

<div>
    <header class="header1">
    </header>
    <br>
    <div style="display: flex; justify-content: center; align-items: center;">
        <img src="/images/LogoPayBill.png" alt="Imagen" width="60%" style="margin-right: 70px;">
        <main class="form-signin w-100 m-auto" style="max-width: 350px; margin-left: auto; text-align:center;">
            <form>

                <h2 class="h3 mb-3 fw-normal">Iniciar Sesión</h2>

                <div class="form-floating">
                    <input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Usuario</label>
                </div>
                <br />
                <div class="form-floating">
                    <input type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Contraseña</label>
                </div>

                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        
                    </label>
                </div>
                <button class="btn btn-primary w-100 py-2" type="submit" style="background-color:#4d8936">Ingresar</button>
               
                <br>
                <a asp-action="Registro" asp-controller="Home">Registrarse</a>
                <br>
                <a asp-action="Restaurar" asp-controller="Home">¿Olvidaste tu Contraseña?</a>

            </form>
        </main>
    </div>
    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
    <div class="text-center">

        <a asp-action="BillList" asp-controller="Bill" class="btn btn-warning btn-sm">Facturas</a>
    </div>
</div>