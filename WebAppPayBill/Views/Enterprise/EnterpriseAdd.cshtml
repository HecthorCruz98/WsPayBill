@model EnterpriseModel
@{
    ViewData["Title"] = " Agregar Empresa Facturadora";
}
<div class="card">
    <div class="card-header">
        Crear Factura
    </div>
    <div class="card-body">

        <form asp-action="AddEnterprise" asp-controller="Enterprise" method="post">

            <div class="mb-2">
                <label class="form-label">Id</label>
                <input type="number" class="form-control form-control-sm" asp-for="entId" readonly="readonly" />
            </div>
            <div class="mb-2">
                <label class="form-label">Nombre Empresa</label>
                <input type="text" class="form-control form-control-sm" asp-for="entName" />
            </div>
            <div class="mb-2">
                <label class="form-label">Tipo Empresa</label>
                <input type="text" class="form-control form-control-sm" asp-for="etyId" />
            </div>

            <button type="submit" class="btn btn-success btn-sm">Guardar</button>

            <a asp-action="EnterpriseList" asp-controller="Enterprise" class="btn btn-warning btn-sm">Volver a lista</a>
        </form>

    </div>

</div>